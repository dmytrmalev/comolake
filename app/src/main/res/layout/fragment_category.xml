<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.como.comolake.fragment.CategoryFragment"
    android:background="#2d3e50"
    android:orientation="horizontal"
    android:paddingTop="30dp"
    android:paddingBottom="30dp"
    android:weightSum="2">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="PARTICOLARITA"
            android:id="@+id/txt_particular"
            android:layout_weight="1"
            android:background="@drawable/cat_btn_particular"
            android:gravity="center_vertical|right"
            android:paddingRight="20dp"
            android:textColor="#ffffff"
            android:textSize="25dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="PAESI"
            android:id="@+id/txt_town"
            android:layout_weight="1"
            android:background="@drawable/cat_btn_town"
            android:layout_marginTop="30dp"
            android:paddingRight="30dp"
            android:gravity="center_vertical|right"
            android:textSize="30dp"
            android:textColor="#ffffff" />

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_marginLeft="30dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="COMO\nCITTA"
            android:id="@+id/txt_comocity"
            android:layout_weight="1"
            android:background="@drawable/cat_btn_city"
            android:textSize="30dp"
            android:gravity="center_vertical|left"
            android:paddingLeft="30dp"
            android:textColor="#ffffff" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="VILLE"
            android:id="@+id/txt_villa"
            android:layout_weight="1"
            android:layout_marginTop="30dp"
            android:background="@drawable/cat_btn_villa"
            android:textSize="30dp"
            android:gravity="center_vertical|left"
            android:paddingLeft="30dp"
            android:textColor="#ffffff" />
    </LinearLayout>
</LinearLayout>
