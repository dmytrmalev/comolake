<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.IntroActivity"
    android:background="@drawable/intro_bg">

    <SurfaceView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/surfaceView" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:gravity="center"
        android:layout_centerInParent="true"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:background="#cc5d6d72"
        android:id="@+id/layout_logo">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/imageView"
            android:src="@drawable/intro_logo"
            android:adjustViewBounds="true"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:gravity="bottom">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="EXIT"
            android:id="@+id/txt_exit"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:textColor="@color/colorIntroDark"
            android:background="@color/colorIntroBright"
            android:layout_alignParentBottom="true"
            android:textAlignment="center"
            android:allowUndo="false" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/layout_flags"
                android:layout_above="@+id/layout_lang"
                android:layout_alignRight="@+id/layout_lang"
                android:baselineAligned="false"
                android:visibility="visible">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="3dp"
                    android:id="@+id/layout_flg_ru">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="RUSSIAN"
                        android:id="@+id/txt_ru"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:paddingTop="3dp"
                        android:paddingBottom="3dp"
                        android:layout_toRightOf="@+id/txt_exit"
                        android:textColor="@color/colorIntroDark"
                        android:background="@color/colorIntroBright"
                        android:textSize="12dp"
                        android:textIsSelectable="false"
                        android:gravity="center" />

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="match_parent"
                        android:id="@+id/flg_ru"
                        android:layout_toRightOf="@+id/txt_langsel"
                        android:background="@drawable/intro_flg_ru" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="3dp"
                    android:id="@+id/layout_flg_fr">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="FRENCH"
                        android:id="@+id/txt_fr"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:paddingTop="3dp"
                        android:paddingBottom="3dp"
                        android:layout_toRightOf="@+id/txt_exit"
                        android:textColor="@color/colorIntroDark"
                        android:background="@color/colorIntroBright"
                        android:textSize="12dp"
                        android:gravity="center"
                        android:layout_weight="1" />

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="match_parent"
                        android:id="@+id/flg_fr"
                        android:layout_toRightOf="@+id/txt_langsel"
                        android:background="@drawable/intro_flg_fr" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="3dp"
                    android:id="@+id/layout_flg_de">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="GERMAN"
                        android:id="@+id/txt_de"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:paddingTop="3dp"
                        android:paddingBottom="3dp"
                        android:layout_toRightOf="@+id/txt_exit"
                        android:textColor="@color/colorIntroDark"
                        android:background="@color/colorIntroBright"
                        android:textSize="12dp"
                        android:gravity="center"
                        android:layout_weight="1" />

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="match_parent"
                        android:id="@+id/flg_de"
                        android:layout_toRightOf="@+id/txt_langsel"
                        android:background="@drawable/intro_flg_ge" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="3dp"
                    android:id="@+id/layout_flg_it">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ITALIAN"
                        android:id="@+id/txt_it"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:paddingTop="3dp"
                        android:paddingBottom="3dp"
                        android:layout_toRightOf="@+id/txt_exit"
                        android:textColor="@color/colorIntroDark"
                        android:background="@color/colorIntroBright"
                        android:textSize="12dp"
                        android:gravity="center"
                        android:layout_weight="1" />

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="match_parent"
                        android:id="@+id/flg_it"
                        android:layout_toRightOf="@+id/txt_langsel"
                        android:background="@drawable/intro_flg_it" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="3dp"
                    android:id="@+id/layout_flg_en">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ENGLISH"
                        android:id="@+id/txt_en"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:paddingTop="3dp"
                        android:paddingBottom="3dp"
                        android:layout_toRightOf="@+id/txt_exit"
                        android:textColor="@color/colorIntroDark"
                        android:background="@color/colorIntroBright"
                        android:textSize="12dp"
                        android:gravity="center"
                        android:layout_weight="1" />

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="match_parent"
                        android:id="@+id/flg_en"
                        android:layout_toRightOf="@+id/txt_langsel"
                        android:background="@drawable/intro_flg_en" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/txt_exit"
                android:id="@+id/layout_lang"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="false">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SELECT LANGUAGES"
                    android:id="@+id/txt_langsel"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:layout_toRightOf="@+id/txt_exit"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/colorIntroDark"
                    android:background="@color/colorIntroBright"
                    android:textAlignment="center" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/img_flag"
                    android:layout_toRightOf="@+id/txt_langsel"
                    android:background="@drawable/intro_flg_en" />

            </LinearLayout>
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt_go"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:textColor="@color/colorIntroBright"
            android:background="@color/colorIntroDark"
            android:autoText="false"
            android:layout_toRightOf="@+id/layout_lang"
            android:layout_alignParentBottom="true"
            android:text="GO"
            android:textAlignment="center"
            android:layout_marginLeft="10dp" />

    </LinearLayout>

</RelativeLayout>
